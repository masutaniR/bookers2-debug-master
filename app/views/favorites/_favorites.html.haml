- if book.favorited_by?(current_user)
  %p
    = link_to book_favorites_path(book), method: :delete, class: 'favorite-btn', remote: true do
      ♥#{book.favorites.count}
- else
  %p
    = link_to book_favorites_path(book), method: :post, class: 'favorite-btn', remote: true do
      ♡#{book.favorites.count}
