<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h2 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>">
        <%= @user.name %>さんとのチャット
      </h2>

      <table class="table message">
        <thead>
          <tr>
            <th style="text-align: left;">
              <%= @user.name %>
            </th>
            <th style="text-align: right;">
              <%= current_user.name %>
            </th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
          <tbody>
            <tr>
              <td></td>
              <td>
                <p style="text-align: right;">
                  <%= chat.message %>
                </p>
              </td>
            </tr>
          </tbody>
          <% else %>
          <tbody>
            <tr>
              <td>
                <p style="text-align: left;">
                  <%= chat.message %>
                </p>
              </td>
              <td></td>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>

      <%= form_with model: @chat do |f| %>
        <%= f.text_field :message, placeholder: "message", class: 'form-control' %>
        <%= f.hidden_field :room_id %>
      <% end %>
    </div>
  </div>
</div>